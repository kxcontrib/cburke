<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="edit" _name="Qstandard" version="1.0">
  <author>cdb</author>
  <_description>qconsole editor</_description>

  <!-- Palette -->
  <color name="blue"        value="#0000FF"/>
  <color name="magenta"     value="#FF00FF"/>
  <color name="violet"      value="#6A5ACD"/>
  <color name="cyan"        value="#008A8C"/>
  <color name="green"       value="#2E8B57"/>
  <color name="brown"       value="#A52A2A"/>
  <color name="red"         value="#FF0000"/>
  <color name="yellow"      value="#FFFF00"/>
  <color name="purple"      value="#A020F0"/>

  <style name="q:comment"        foreground="blue"/>
  <style name="q:keyword"        foreground="brown"/>
  <style name="q:parens"         foreground="magenta"/>
  <style name="q:string"         foreground="green"/>
  <style name="q:escaped-character" foreground="purple"/>

<!-- does not handle dates correctly...
  <style name="q:boolean"        foreground="purple"/>
  <style name="q:decimal"        foreground="purple"/>
  <style name="q:floating-point" foreground="purple"/>
  <style name="q:hexadecimal"    foreground="purple"/>
  <style name="q:octal"          foreground="purple"/>
-->

  <!-- Bracket Matching -->
  <style name="bracket-match"    foreground="#white" background="#grey" bold="true"/>
  <style name="bracket-mismatch" foreground="#white" background="#red" bold="true"/>

  <!-- Search Matching -->
  <style name="search-match"     background="yellow"/>

</style-scheme>
